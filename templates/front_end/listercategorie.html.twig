                                    </button>
                                    <button type="button" class="btn btn-block btn-social btn-google m-b-5">
                                        <span class="fa fa-google"></span> Sign in with Google
                                    </button>
                                    <br><br>
                                    <center>OU</center>
                                    <br><br>
                                    <center><label>Entre votre email</label></center>
                                    {{ render(controller(
                                        'App\\Controller\\ParticipantController::newparticipant',{'quiz':q }

                                    )) }}
                                </div>

                            </div>
                        </div>

                    </div>
                    {% if  q.terminer == 1 %}
                        <div class="col-sm-3" >


                            <div class="card">
                                {% if q.brochure == "null" %}
                                    <img width="150" height="150" src="{{ asset('logoquiz/logonull.png' ) }}">

                                {% else %}

                                    <img src="{{ asset('uploads/brochures/' ~ q.brochure) }}" alt="Avatar" style="width:150px;height:150px;">
                                {% endif %}
                                <p class="titrequiz">{% if q.titre|length > 21 %}{{ q.titre|slice(0, 20) ~ '...' }}{% else %}{{ q.titre }}{% endif %}</p>
