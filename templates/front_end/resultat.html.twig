                                    Formule:<br>
                                    <input  class="form-control" type="text">
                                    Resultat:
                                    <input class="form-control" type="text">
                                {% endif %}
                            {% endfor %}
                        {% endif %}



                    {% endfor %}

                    {% if key == quiz.page|length %}
                        {{ quiz.pied }}
                    {% endif %}

                </div>




            {% endfor %}
        {% set o=0 %}
        {% for q in quiz.page %}
        {% for p in q.question %}
            {% set o=o+1 %}
        {% endfor %}
        {% endfor %}

        {% if res < o/2 %}
        <center>
            <h2><font color="red">   {{ quiz.messageE }}</font></h2>
        </center>
      <h1><font color="red"> Votre score est :  {{ res }} / {{ o }} point/s</font></h1>
{% else %}
   <center>
       <h2><font color="#4169e1">   {{ quiz.messageS }}</font></h2>
   </center>

    <h1><font color="green"> Votre score est :  {{ res }} / {{ o }} point/s</font></h1>

        {% endif %}
            <div style="overflow:auto;">
