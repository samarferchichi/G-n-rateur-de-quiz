<div style="background-color: ">

    {% set res=0 %}

    <form id="regForm" action="{{ path('index') }}" method="post" >

        <input value="{{ quiz.timequiz }}" hidden id="timequiz">
        <center>
            <h1>  <font size="" color="{{ quiz.colorTitre }}">
                 Correction de quiz
                    {% if quiz.gras and quiz.italique %}
                        <b><i>  "{{ quiz.titre }}"</i></b>
                    {% else %}
                        {% if quiz.gras %}
                            <b> "{{ quiz.titre }}"</b>
                        {% else %}
                            {% if quiz.italique %}
                                <i> "{{ quiz.titre }}"</i>
                            {% else %}
                                "{{ quiz.titre }}"
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </font>
                {% if quiz.brochure != "null" %}

                <img width="60" height="60" src="{{ asset('uploads/brochures/' ~ quiz.brochure) }}">
                {% endif %}

            </h1>
        </center>
        <p>{{ quiz.description }}.</p>



        <input type="number" hidden id="quiz">




            {% for key,  i in quiz.page %}

                <div  class="tab" style="background-color: {{ i.bgColor }}; padding: 20px">

                    {% if key ==0  %}
                        {{ quiz.entete }}
                    {% endif %}

                    <h2>page : {{ key + 1 }}</h2>
                    <h3>
                        {% if i.titrePage == "Vide" %}
                        {% else %}
                            <font color="{{ i.colorTitrePage }} ">
                                {{ i.titrePage   }}
                            </font>
                        {% endif %}

                    </h3>
                    {% if i.question|length == 0  %}
                        <h2>Cette page est vide !!</h2>
                    {% endif %}
                    {% for key2, question in i.question  %}
                        <div class="vl">
                        </div>
                        <br>                                            {% set nb=0 %}

                        {% if question.typeQuestion == 'Réponse courte' and question.actif == 1  %}
                            <h5><b>Question n°: {{ key2+1 }}</b></h5>

                            {% for para in question.parametre %}
                                {% if para.question == question %}



                                    {% if para.formText == 'texte' %}

                                        {{ question.textQuestion }}<br>
                                        {{ question.descriptionQuestion }}
                                        {% for user in listparticipantquiz %}
                                            {% if user.user == userconct %}
                                                {% set nb=nb + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {% for p in reponseParticipant %}

                                            {% if p.idQuestion == question and p.tentative == max.tentative  %}
                                                    {% for q in question.reponse %}
                                                      {% if q.reponseValide == p.reponse and p.tentative == max.tentative %}<br>
                                                          {{ p.reponse  }}
                                                        <label><font color="green">Reponse correct</font></label>
                                                          {% set res=res+1 %}
                                                          {% else %}<br>

                                                              {{ p.reponse  }}

                                                              <label><font color="red">Reponse incorrect !! </font></label>

                                                      {% endif %}

                                                    {% endfor %}

                                            {% endif %}
                                        {% endfor %}


                                    {% endif %}





                                    {% if para.formText == 'date'  and question.actif == 1 %}

                                        {{ question.textQuestion }}<br>
                                        {{ question.descriptionQuestion }}
                                        {% for user in listparticipantquiz %}
                                            {% if user.user == userconct %}
                                                {% set nb=nb + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {% for p in reponseParticipant %}

                                            {% if p.idQuestion == question and p.tentative == max.tentative  %}
                                                {% for q in question.reponse %}

                                                    {% if q.reponseValide == p.reponse and p.tentative == max.tentative  %}

                                                        <label><font color="green">Reponse correct</font></label>
                                                        <p>{{ p.reponse }}</p>

                                                        {% set res=res+1 %}
                                                    {% else %}<br>
                                                        <p>{{ p.reponse }}</p>

                                                      <label><font color="red">Reponse incorrect !! </font></label>
                                                    {% endif %}

                                                {% endfor %}

                                            {% endif %}
                                        {% endfor %}


                                    {% endif %}









                                    {% if para.formText == 'number' and question.actif == 1 %}
                                        <br>
                                        {{ question.textQuestion }}<br>
                                        {{ question.descriptionQuestion }}<br>
                                        <label style="padding-left: 77%">Nombre des chiffres maximum sont  {{ para.nbChiffre }}</label>

                                        <input id="cc" onkeyup="showHintnumber(this.value)" type="number" oninput="this.className = ''"   >
                                        <input id="nbch" class="hidden" type="number" value="{{ para.nbChiffre }}">

                                        <p><span id="txtHintn"></span></p>


                                    {% endif %}


                                {% endif %}
                            {% endfor %}


                        {% endif %}



                        {% if question.typeQuestion == 'Vrai/faux' and question.actif == 1 %}



                            <h5><b>Question n°: {{ key2+1 }}</b></h5>

                            {{ question.textQuestion }}<br>
                            {{ question.descriptionQuestion }}<br>

                            {% for p in question.reponse %}
                                {% if p.question == question %}


                                    {{ p.reponseValide }}
                                    <select style="width: 150px;" class="form-control">
                                        <option>
                                            Vrai
                                        </option>
                                        <option>
                                            Faux
                                        </option>
                                    </select>

                                {% endif %}
                            {% endfor %}

                        {% endif %}


                        {% if question.typeQuestion =='Liste déroulante' and question.actif == 1 %}
