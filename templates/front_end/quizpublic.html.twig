<html lang="en">

<head>

    <style>
        .center {
            margin: auto;
            width: 60%;
            border: 0.5px solid #eeeeee ;
            padding: 10px;
        }
        .img2 {
            float: right;
        }
        body {
            font-family: "Lato", sans-serif;
            transition: background-color .5s;
        }
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }
        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }
        .sidenav a:hover {
            color: #2a85a0;
        }
        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }
        #main {
            transition: margin-left .5s;
            padding: 16px;
        }
        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }
        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }
        .pagination a.active {
            background-color: dodgerblue;
            color: white;
        }
        .pagination a:hover:not(.active) {background-color: #ddd;}
        * {
            box-sizing: border-box;
        }
        body {
            background-color: #f1f1f1;
        }
        #regForm {
            background-color: #ffffff;
            margin: 100px auto;
            font-family: Raleway;
            padding: 40px;
            width: 70%;
            min-width: 300px;
        }
        h1 {
            text-align: center;
        }
        input {
            padding: 10px;
            width: 100%;
            font-size: 17px;
            font-family: Raleway;
            border: 1px solid #aaaaaa;
        }
        /* Mark input boxes that gets an error on validation: */
        input.invalid {
            background-color: #ffdddd;
        }
        /* Hide all steps by default: */
        .tab {
            display: none;
        }
        button {
            background-color: #4CAF50;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 17px;
            font-family: Raleway;
            cursor: pointer;
        }
        button:hover {
            opacity: 0.8;
        }
        #prevBtn {
            background-color: #bbbbbb;
        }
        /* Make circles that indicate the steps of the form: */
        .step {
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbbbbb;
            border: none;
            border-radius: 50%;
            display: inline-block;
            opacity: 0.5;
        }
        .step.active {
            opacity: 1;
        }
        /* Mark the steps that are finished and valid: */
        .step.finish {
            background-color: #4CAF50;
        }
    </style>



    <!-- Scroll Bars -->

</head>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand"  href="{{ path('index') }}">Quiz accueil</a>
        </div>
        <ul class="nav navbar-nav">
            <li>
                <span style="color:white;  font-size:40px;cursor:pointer" onclick="openNav()">&#9776;</span>
            </li>

            <li><a href="{{ path('index') }}">Home</a></li>
            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Quiz <span class="caret"></span></a>
                <ul class="dropdown-menu">

                    {% if listquiz|length == 0 %}
                        <li style="width: 350px;" class="menu-level-1">Liste Vide</li>
                    {% else %}
                        {% for quiz in listquiz %}
                            {% if quiz.terminer == 1 %}
                                {% if quiz.ouvrireQuiz <= date() and date() < quiz.fermerQuiz %}
                                    <li style="width: 350px;" class="menu-level-1"><a href="{{ path('quizpublic', {'quiz': quiz.id }) }}" onclick="MyFunction()">{{ quiz.titre }}</a></li>

                                {% endif %}
                                {% if quiz.ouvrireQuiz <= date() and quiz.fermerQuiz == null %}
                                    <li style="width: 350px;" class="menu-level-1"><a href="{{ path('quizpublic', {'quiz': quiz.id }) }}" onclick="MyFunction()">{{ quiz.titre }}</a></li>
                                {% endif %}

                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </ul>
            </li>
            <li><a href="#">Page 2</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
    </div>
</nav>

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="#">About</a>
    <a href="#">Services</a>
    <a href="#">Clients</a>
    <a href="#">Contact</a>
</div>



<div style="background-color: ">



    <form id="regForm" onsubmit="return checkForm(this)" >

        <center>
            <h1>  <font size="" color="{{ quiz.colorTitre }}">
                    Titre de quiz
                    {% if quiz.gras and quiz.italique %}
                        <b><i>  "{{ quiz.titre }}"</i></b>
                    {% else %}
                        {% if quiz.gras %}
                            <b> "{{ quiz.titre }}"</b>
                        {% else %}
                            {% if quiz.italique %}
                                <i> "{{ quiz.titre }}"</i>
                            {% else %}
                                "{{ quiz.titre }}"
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </font>
                <img width="60" height="60" src="{{ asset('uploads/brochures/' ~ quiz.brochure) }}">


            </h1>
        </center>
        <p>{{ quiz.description }}.</p>

        {% for key,  i in quiz.page %}




            <div  class="tab" style="background-color: {{ i.bgColor }}; padding: 20px">

                {% if key ==0  %}
                    {{ quiz.entete }}
                {% endif %}



                <h2>page : {{ key + 1 }}</h2>
                <h3>
                    <font color="{{ i.colorTitrePage }} ">
                        {{ i.titrePage   }}
                    </font>
                </h3>
                {% if i.question|length == 0  %}
                    <h2>Cette page est vide !!</h2>
                {% endif %}
                {% for key2, question in i.question  %}



                    {% if question.typeQuestion == 'Réponse courte'  %}

                        {% for para in question.parametre %}
                            {% if para.question == question %}
                                {% if para.formText == 'texte' %}

                                    <h5><b>Question n°: {{ key2+1 }}</b></h5>
                                    {{ question.textQuestion }}<br>
                                    {{ question.descriptionQuestion }}
                                    <label style="padding-left: 77%"><font size="2px">Nombre des caractères maximum sont  {{ para.nbCaractere }}</font></label>

                                    <div class="row">
                                       <div class="col-sm-11"> <input onkeyup="showHint(this.value)"  id="vv" class="form-control" oninput="this.className = ''"  onchange="this.value = this.value.replace(/^\s+|\s+$/g, ''); valid_name.checked = this.value;" > </div>
                                       <div class="col-sm-1"><input type="checkbox" disabled name="valid_name"></div>

                                   </div>
                                    <p><span id="txtHint"></span></p>


                                    <input id="nb" class="hidden" type="number" value="{{ para.nbCaractere }}">


                                {% endif %}

                                {% if para.formText == 'date' %}
                                    <br>
                                    <h5><b>Question n°: {{ key2+1 }}</b></h5>
                                    {{ question.textQuestion }}<br>
                                    {{ question.descriptionQuestion }}<br>

                                    <input type="date" oninput="this.className = ''"   >


                                    {% if question.infoBulle != '' %}
                                        <br>
                                        <a href="#" class="fa fa-info-circle" data-toggle="popover" title="{{ question.infoBulle }}" >INfO<i style="color:#4bb1cf;" class="fa fa-info-circle"></i></a>
                                    {% endif %}
                                {% endif %}


                                {% if para.formText == 'number' %}
                                    <br>
                                    <h5><b>Question n°: {{ key2+1 }}</b></h5>
                                    {{ question.textQuestion }}<br>
                                    {{ question.descriptionQuestion }}<br>
                                    <label style="padding-left: 77%">Nombre des chiffres maximum sont  {{ para.nbChiffre }}</label>

                                    <input id="cc" onkeyup="showHintnumber(this.value)" type="number" oninput="this.className = ''"   >
                                    <input id="nbch" class="hidden" type="number" value="{{ para.nbChiffre }}">

                                    <p><span id="txtHintn"></span></p>

                                    {% if question.infoBulle != '' %}
                                        <br>
                                        <a href="#" class="fa fa-info-circle" data-toggle="popover" title="{{ question.infoBulle }}" >INfO<i style="color:#4bb1cf;" class="fa fa-info-circle"></i></a>
                                    {% endif %}
                                {% endif %}


                            {% endif %}
                        {% endfor %}


                    {% endif %}



                    {% if question.typeQuestion == 'Vrai/faux' %}
                        <br><br>
                        <h5><b>Question n°: {{ key2+1 }}</b></h5>
                        {{ question.textQuestion }}<br>
                        {{ question.descriptionQuestion }}<br>
                        {% for p in question.reponse %}
                            {% if p.question == question %}


                                {{ p.reponseValide }}
                                <select style="width: 150px;" class="form-control">
                                    <option>
                                        Vrai
                                    </option>
                                    <option>
                                        Faux
                                    </option>
                                </select>

                            {% endif %}
                        {% endfor %}

                    {% endif %}


                    {% if question.typeQuestion =='Liste déroulante' %}
                        <br><br>
                        <h5><b>Question n°: {{ key2+1 }}</b></h5>
                        {{ question.textQuestion }}
                        <br>
                        {{ question.descriptionQuestion }}
                        <br>
                        <select style="width: 350px;" class="form-control">
                            {% for i in question.reponse %}
                                {% if i.question == question %}

                                    <option>
                                        {{ i.reponseValide }}
                                    </option>

                                {% endif %}
                            {% endfor %}
                        </select>
                    {% endif %}



                    {% if question.typeQuestion == 'Case à cocher' %}
                        <br><br>
                        <h5><b>Question n°: {{ key2+1 }}</b></h5>
                        {{ question.textQuestion }}
                        <br>
                        {{ question.descriptionQuestion }}

                        {% for p in question.reponse %}
                            {% if p.question == question %}
                                <br>
                                {{ p.reponseValide }}

                                <input  type="checkbox">



                            {% endif %}
                        {% endfor %}
                    {% endif %}



                    {% if question.typeQuestion =='Calculée' %}
                        <br>
                        <h5><b>Question n°: {{ key2+1 }}</b></h5>
                        {{ question.textQuestion }}
                        <br>
                        {{ question.descriptionQuestion }}<br>

                        {% for p in question.reponse %}
                            {% if p.question == question %}
                                {{ p.descriptionformule }}<br>
                                Formule:<br>
                                <input  class="form-control" type="text">
                                Resultat:
                                <input class="form-control" type="text">
                            {% endif %}
                        {% endfor %}
                    {% endif %}


                    {% if question.infoBulle != '' %}

                        <a  href="#" class="fa fa-info-circle" data-toggle="popover" title="{{ question.infoBulle }}" >INfO<i style="color:#4bb1cf;" class="fa fa-info-circle"></i></a>
                    {% endif %}

                {% endfor %}

                {% if key == quiz.page|length %}
                    {{ quiz.pied }}
                {% endif %}

            </div>




        {% endfor %}

        <div style="overflow:auto;">
            <div style="float:right;">
                <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
                <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
            </div>
        </div>


        <div style="text-align:center;margin-top:40px;">
            {% for  i in quiz.page %}
                <span class="step"></span>
            {% endfor %}
        </div>


    </form>

</div>
</div>



</div>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.marginLeft = "250px";
        document.body.style.backgroundColor = "rgba(0,0,0,0.4)";
    }
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft= "0";
        document.body.style.backgroundColor = "white";
    }
    var currentTab = 0; // Current tab is set to be the first tab (0)
    showTab(currentTab); // Display the current tab
    function showTab(n) {
        // This function will display the specified tab of the form...
        var x = document.getElementsByClassName("tab");
        x[n].style.display = "block";
        //... and fix the Previous/Next buttons:
        if (n == 0) {
            document.getElementById("prevBtn").style.display = "none";
        } else {
            document.getElementById("prevBtn").style.display = "inline";
        }
        if (n == (x.length - 1)) {
            document.getElementById("nextBtn").innerHTML = "Submit";
        } else {
            document.getElementById("nextBtn").innerHTML = "Next";
        }
        //... and run a function that will display the correct step indicator:
        fixStepIndicator(n)
    }
    function nextPrev(n) {
        // This function will figure out which tab to display
        var x = document.getElementsByClassName("tab");
        // Exit the function if any field in the current tab is invalid:
        if (n == 1 && !validateForm())

            return false;
        // Hide the current tab:
        x[currentTab].style.display = "none";
        // Increase or decrease the current tab by 1:
        currentTab = currentTab + n;
        // if you have reached the end of the form...
        if (currentTab >= x.length) {
            // ... the form gets submitted:
            document.getElementById("regForm").submit();
            return false;
        }
        // Otherwise, display the correct tab:
        showTab(currentTab);
    }
    function validateForm() {
        // This function deals with validation of the form fields

        var x, y, i, valid = true;
        x = document.getElementsByClassName("tab");
        y = x[currentTab].getElementsByTagName("input");
        // A loop that checks every input field in the current tab:
        for (i = 0; i < y.length; i++) {
            // If a field is empty...
            if (y[i].value == "") {


                // add an "invalid" class to the field:
                y[i].className += " invalid";
                // and set the current valid status to false
                valid = false;
            }
        }
        // If the valid status is true, mark the step as finished and valid:
        if (valid) {
            if(this.nb.value !=  this.vv.length  && this.vv.value.length >  this.nb.value ) {

                alert('il faut entre une réponse avec la longueur inférieure à '+this.nb.value  );
                this.vv.focus();

                return false;

            }

            if(this.nbch.value !=  this.cc.length  && this.cc.value.length >  this.nbch.value ) {

                alert('il faut entre une réponse avec la longueur inférieure à '+this.nbch.value  );
                this.vv.focus();

                return false;

            }

            document.getElementsByClassName("step")[currentTab].className += " finish";
        }
        return valid; // return the valid status
    }
    function fixStepIndicator(n) {
        // This function removes the "active" class of all steps...
        var i, x = document.getElementsByClassName("step");
        for (i = 0; i < x.length; i++) {
            x[i].className = x[i].className.replace(" active", "");
        }
        //... and adds the "active" class on the current step:
        x[n].className += " active";
    }

    function showHint(str) {
        console.log(str);

        if (str.length == 0) {
            document.getElementById("txtHint").innerHTML = "";
            console.log("vide");
            return;
        }
else{
            if(this.nb.value !=  this.vv.length  && this.vv.value.length >  this.nb.value ) {

                document.getElementById("txtHint").innerHTML = "<label><font color=red> Il faut entre une réponse avec la longueur inférieure à "+this.nb.value+"</font></label>" ;
                console.log("non");
                return false;

            }else {
                document.getElementById("txtHint").innerHTML = "<label><font color=green>La longueur de réponse est valide</font></label>";
                console.log("oui");
            }



        }

    }

    function showHintnumber(str) {



        console.log(str);

        if (str.length == 0) {
            document.getElementById("txtHintn").innerHTML = "";
            console.log("vide");
            return;
        }
        else{
            
            if(this.nbch.value !=  this.cc.length  && this.cc.value.length >  this.nbch.value ) {

                document.getElementById("txtHintn").innerHTML = "<label><font color=red> Il faut entre une réponse avec la longueur inférieure à "+this.nbch.value+"</font></label>" ;
                console.log("non");
                return false;

            }else {
                document.getElementById("txtHintn").innerHTML = "<label><font color=green>La longueur de réponse est valide</font></label>";
                console.log("oui");
            }


        }





    }




</script>
<br><br>
</body>
</html>
