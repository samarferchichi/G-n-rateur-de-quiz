                    {% if listquiz|length == 0 %}
                        <li style="width: 350px;" class="menu-level-1">Liste Vide</li>
                    {% else %}
                        {% for quiz in listquiz %}
                            {% if quiz.terminer == 1 %}
                                {% if quiz.ouvrireQuiz <= date() and date() < quiz.fermerQuiz %}
                                    <li >
                                        <a href="#" data-target="#test" data-toggle="modal" style="width: 350px;" class="menu-level-1">{{ quiz.titre }}</a></li>

                                {% endif %}
                                {% if quiz.ouvrireQuiz <= date() and quiz.fermerQuiz == null %}
                                    <li style="width: 350px;" class="menu-level-1"><a href="#" data-target="#test" data-toggle="modal" style="width: 350px;" class="menu-level-1">{{ quiz.titre }}</a></li>
                                {% endif %}

                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </ul>
            </li>
            <li><a href="#">Page 2</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
