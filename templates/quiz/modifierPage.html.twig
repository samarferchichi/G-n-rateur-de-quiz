                                            <br>
                                            <div class="row" >
                                                <div class="col">
                                                    {{ j.descriptionQuestion }}
                                                </div>
                                            </div>

                                            <div style="width: 100px;">
                                                <select style="width: 350px;" class="form-control">
                                                    {% for i in j.reponse %}
                                                        {% if i.question == j %}

                                                            <option>
                                                                {{ i.reponseValide }}
                                                            </option>

                                                        {% endif %}
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <br>


                                        {% endif %}

                                        {% if j.typeQuestion == 'Case Ã  cocher' %}

                                            {{ j.textQuestion }}
                                            <br>
                                            {{ j.descriptionQuestion }}

                                            {% for p in j.reponse %}
                                                {% if p.question == j %}
                                                    <div class="row" >
                                                        <div class="col-8">
                                                            {{ p.reponseValide }}
                                                        </div>
                                                        <div class="col-4">

                                                            <div style="width: 100px;">
                                                                <input type="checkbox"  >
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}



                                        {% if j.typeQuestion =='CalculÃ©e' %}
                                            {{ j.textQuestion }}
                                            <br>
                                            {{ j.descriptionQuestion }}

                                            {% for p in j.reponse %}
                                                {% if p.question == j %}
                                                    <table>
                                                        <tr>
                                                            <td colspan="3">
                                                                {{ p.descriptionformule }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b> Formule:</b>
                                                            </td>
                                                            <td colspan="3">
                                                                <input  style="width: 400px;" class="form-control" type="text" >
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>Resultat:</b>
                                                            </td>
                                                            <td>
                                                                <input style="width: 400px;" class="form-control" type="text">
                                                            </td>
                                                        </tr>
                                                    </table>
                                                {% endif %}
                                            {% endfor %}
                                            <br>
                                        {% endif %}




                                        {% if j.typeQuestion =='Date' %}
                                            {{ j.textQuestion }}
                                            <br>
                                            {{ j.descriptionQuestion }}
                                            <br>
                                            <br>
                                            {% for p in j.reponse %}
                                                {% if p.question == j %}
                                                    <div class="row" >
                                                        <div class="col-8">
                                                            {{ p.descriptiondate }}<br>
                                                        </div>
                                                        <div class="col-3">
                                                            <input type="date" class="form-control">
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                            <br>
                                        {% endif %}


                                        {% if j.typeQuestion =='Nombre' %}
                                            {{ j.textQuestion }}
                                            <br>
                                            {{ j.descriptionQuestion }}
                                            <br>
                                            {% for p in j.reponse %}
                                                {% if p.question == j %}
                                                    <div class="row" >
                                                        <div class="col-8">
                                                            {{ p.desnumber }}<br><br>
                                                        </div>
                                                        <div class="col-3">

                                                            <input type="number" class="form-control">
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}


                                        {% if j.infoBulle != '' %}

                                            <div style=" padding-left: 720px;" class="container">
                                                <a href="#" data-toggle="popover" title="INFO !" data-content="{{ j.infoBulle }}"><i style="color:#4bb1cf;" class="fa fa-info-circle"></i></a>
                                            </div>
                                        {% endif %}
                                        <div  class="modal fade" id="editequestion-{{ j.id }}" role="dialog">
                                            <div  class="modal-dialog modal-xl">

                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header" style="background-color: #31b0d5">
                                                        <h2 class="modal-title"><font color="white"> Modifier question</font></h2>
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                                                    </div>
                                                    <div class="modal-body">


                                                        {{ render(controller(
                                                            'App\\Controller\\QuestionController::edit2',
                                                            { 'id': j.id }
                                                        )) }}


                                                        <div style="background-color: "><h2>Modifier les reponses </h2></div>
                                                        {% for i in j.reponse %}
                                                            {{ render(controller(
                                                                'App\\Controller\\ReponseController::editReponse2',
                                                                { 'id': i.id }
                                                            )) }}
                                                        {% endfor %}


                                                    </div>

                                                </div>

                                            </div>

