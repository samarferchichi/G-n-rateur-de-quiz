                        <div class="card-body"><center>LISTE QUIZ</center></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9" style="background-color: ">
                <div class="panel panel-success">
                    <div class="card bg-info text-white">
                        <div class="card-body"> <center>CONTINUE DE QUIZ</center></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-sm-3" >
                            <table>

                                <tr>
                                    <td colspan="" >
                                        <div class="form-group row">
                                            <div class="col-xs-1" >

                                                {% for q in listequiz %}
                                                    <div style=" width:373px;border-bottom: 1px solid ;
                                                             color: #3a87ad; ">
