                                                {% endfor %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>


                            <script>

                                function myFunction(p1,p2,p3,p4) {
                                    var url = '{{ path('get_info_quiz', {'quiz': 'quiz_id'}) }}';
                                    url = url.replace("quiz_id", p1);

                                    $.ajax({
                                        url: url,
                                        method: 'POST',
                                        success: function(result){
                                            $("#test").html(result);
                                        }
                                    });

                                }



                            </script>


                        </div>
                        <div class="col-sm-9">

                            <div class="form-group col">
                                <center>
                                    <div id="test" style="background-color:  ; width: auto; height: auto"></div>
                                    <br>
                                    <div id="test2" style="background-color:  ; width: auto; height: auto">


                                    </div>

                                </center>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>




