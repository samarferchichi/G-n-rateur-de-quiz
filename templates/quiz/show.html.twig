            <tr>
                <th>Fermer_quiz</th>
                <td>{{ quiz.fermerQuiz ? quiz.fermerQuiz|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Send_mail</th>
                <td>{{ quiz.sendMail ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Imprime_pdf</th>
                <td>{{ quiz.imprimePdf ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Entete</th>
                <td>{{ quiz.entete }}</td>
            </tr>
            <tr>
                <th>Pied</th>
                <td>{{ quiz.pied }}</td>
            </tr>
            <tr>
                <th>Message_s</th>
                <td>{{ quiz.messageS }}</td>
            </tr>
            <tr>
                <th>Message_e</th>
                <td>{{ quiz.messageE }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quiz_index') }}">back to list</a>

    <a href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
