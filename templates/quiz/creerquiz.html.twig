                                      <font color="black">
                                         <i>
                                             {{ quiz.entete }}
                                         </i>


                                      </font>
                                    </label>
                                    <label>
                                     <font color="{{ page.colorTitrePage }}" >
                                       <b>
                                           {{ page.titrePage }}
                                       </b>
                                     </font>
                                    </label>

                                </div>
                            </div>



                                    {% for j in listquestion %}
                                            <div class="col-sm-11"  >
