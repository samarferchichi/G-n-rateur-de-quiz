            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Moyenne sur 5'
                }
            },
            legend: {
                enabled: false
            },
            tooltip: {
                pointFormat: 'Moyenne des notes: <b>{point.y:.1f}</b>/5'
            },
            series: [{
                name: 'Population',
