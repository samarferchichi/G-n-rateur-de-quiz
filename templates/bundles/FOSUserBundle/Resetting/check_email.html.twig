{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}


    <link rel="stylesheet" href="{{ asset('template/css/style.css') }}">
    <style>
        .auth.lock-full-bg {
            background: url("{{ asset('template/images/slider/10.jpg') }}");
            background-size: cover;
        }
    </style>
    <body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth lock-full-bg">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-transparent text-left p-5 text-center">
                            <form class="pt-2">
                                <div class="form-group">
                                    <p style="color: #007bff; font-size: 18px;">
                                        {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
                                    </p>
                                </div>
                                <div class="mt-5">
                                    <a class="btn btn-block btn-info btn-lg" href="{{ path('home_page_index') }}">Page d'accueil</a>
                                </div>
                                <div class="mt-3 text-center">
                                    <a style="color: #a21e1e;" href="{{ path('fos_user_security_login') }}" class="auth-link">Connectez-vous avec un autre compte</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    </body>

    </html>

{% endblock %}
