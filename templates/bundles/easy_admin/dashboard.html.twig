{% extends '@EasyAdmin/default/layout.html.twig' %}


{% set _content_title = 'Espace d administartion' %}

{% block page_title -%}
    {{ _content_title }}

{%- endblock %}

{% block content_header %}

    <div class="form-group row">
        <div>
            <div class="aa"></div>
            <div class="aa"></div>
            <div class="aa"></div>
        </div>
        &nbsp; &nbsp;
        <h1 class="title">{{ _content_title }}</h1>
    </div>
{% endblock %}
{% block main %}
    <style>
        .aa {
            width: 35px;
            height: 4px;
            background-color: #444444;
            margin: 6px 0;

        }
    </style>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 300px;
                height: 230px;
                margin: 10px;
                text-align: center;
            }

            .title {
            }

            button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 8px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }

            a {
                text-decoration: none;
                font-size: 18px;
                color: black;
            }

            button:hover, a:hover {
                opacity: 0.7;
            }
        </style>
    </head>

<div class="span9">
    <h2 style="text-align:center">Welcome</h2>

    {% if quiz|length != 0 %}
<center><table>
        {% for p in quiz %}

         <td>
             <body>


             <div class="card">
                 <img width="60" height="60" src="{{ asset('uploads/brochures/' ~ p.brochure) }}">
                 <h1>{{ p.titre }}</h1>
                 <p class="title">100 participant</p>
                 <p>{{ p.description }}</p>
                 <div style="margin: 24px 0;">

                 </div>
                 <p><button>Voir</button></p>
             </div>

             </body>
         </td>



    {% endfor %}

    </table></center>
            </div>
    {% else %}
    Aucun quiz exist
    {% endif %}



{% endblock %}